voters = {
    101: {"name": "Pratham", "state": "Maharashtra", "district": "Pune", "city": "Pune", "password": "pratham123", "voted": 0},
    102: {"name": "Pranali", "state": "Maharashtra", "district": "Mumbai", "city": "Mumbai", "password": "panu123", "voted": 0},
    103: {"name": "Amit", "state": "Gujarat", "district": "Ahmedabad", "city": "Ahmedabad", "password": "amit123", "voted": 0}
}

candidates = {
    1: {"name": "Devendra Fadanvis", "party": "BJP Party", "votes": 0},
    2: {"name": "Sharad Pawar", "party": "NCP Party", "votes": 0},
    3: {"name": "Udhav Thakare", "party": "UBT Party", "votes": 0}
}


def login():
    print("\n========== LOGIN ==========")
    print("Available Voter IDs:", list(voters.keys()))
    
    try:
        voter_id = int(input("Enter your Voter ID: "))
    except ValueError:
        print("Invalid input! Please enter numeric ID.")
        return None

    if voter_id not in voters:
        print("Invalid Voter ID!")
        return None

    password = input("Enter your Password: ")

    if voters[voter_id]["password"] != password:
        print("Incorrect Password!")
        return None

    print(f"\nâœ… Welcome {voters[voter_id]['name']}!")
    return voter_id


def show_candidates():
    print("\n========== CANDIDATES ==========")
    for cid, details in candidates.items():
        print(f"{cid}. {details['name']} ({details['party']})")
    print("================================")


def vote(voter_id):
    if voters[voter_id]["voted"] == 1:
        print("You have already voted! Duplicate voting not allowed.")
        return

    show_candidates()

    try:
        choice = int(input("Enter Candidate Number to vote: "))
    except ValueError:
        print("Invalid input! Please enter a number.")
        return

    if choice not in candidates:
        print("Invalid Candidate Number!")
        return

    candidates[choice]["votes"] += 1
    voters[voter_id]["voted"] = 1

    print("Vote cast successfully!")


def show_results():
    print("\n========== FINAL RESULTS ==========")

    max_votes = 0
    winner = None

    for details in candidates.values():
        print(f"{details['name']} ({details['party']}) - {details['votes']} votes")

        if details["votes"] > max_votes:
            max_votes = details["votes"]
            winner = details["name"]

    if max_votes == 0:
        print("\nNo votes have been cast yet.")
    else:
        print(f"\n Winner: {winner}")

    print("===================================")


while True:
    print("\n======= ONLINE VOTING SYSTEM =======")
    print("1.  Login & Vote")
    print("2.  Show Final Results")
    print("3.  Exit")
    print("=====================================")

    option = input("Please select an option (1-3): ")

    if option == "1":
        voter = login()
        if voter:
            vote(voter)
        input("\nPress Enter to return to main menu...")

    elif option == "2":
        show_results()
        input("\nPress Enter to return to main menu...")

    elif option == "3":
        print("\nThank you for using the system. Exiting...")
        break

    else:
        print(" Invalid option! Please select 1, 2, or 3.")